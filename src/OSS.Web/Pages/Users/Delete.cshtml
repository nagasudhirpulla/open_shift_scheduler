@page
@model OSS.Web.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

@if (Model != null)
{
    <div class="row justify-content-center align-items-center">
        <div class="col col-md-10 col-lg-8 col-xl-6">
            <h2>@ViewData["Title"]</h2>
            <hr />
            <h3>Are you sure you want to delete @Model.Usr.Username ( @Model.Usr.DisplayName , @Model.Usr.Email ) ?</h3>
            <div>
                <form method="post">
                    <input type="hidden" asp-for="@Model.UsrDelCmd.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-page="./Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
}
