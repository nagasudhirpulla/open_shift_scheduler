@page
@model OSS.Web.Pages.IndexModel
@using OSS.Domain.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h3 class="display-4">Welcome to Shift Roster Management Application</h3>

    @if (!SignInManager.IsSignedIn(User))
    {
        <h2 class="display-4"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login Here</a></h2>
    }
</div>
