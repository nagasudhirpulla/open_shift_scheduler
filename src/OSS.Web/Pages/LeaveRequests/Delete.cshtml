@page
@model OSS.Web.Pages.LeaveRequests.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this Leave Request?</h3>
<div>
    <h4>Leave Request</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Created At
        </dt>
        <dd class="col-sm-10">
            @Model.LeaveRequest.Created.ToString("dd MMM yyyy HH:mm")
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            From
        </dt>
        <dd class="col-sm-10">
            @Model.LeaveRequest.StartDate.ToString("dd MMM yyyy HH:mm")
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            To
        </dt>
        <dd class="col-sm-10">
            @Model.LeaveRequest.EndDate.ToString("dd MMM yyyy HH:mm")
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Requester
        </dt>
        <dd class="col-sm-10">
            @Model.LeaveRequest.Employee.DisplayName
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Remarks
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveRequest.Remarks)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="LeaveRequest.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>