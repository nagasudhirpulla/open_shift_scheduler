@page
@model OSS.Web.Pages.Shifts.EditModel
@{
    ViewData["Title"] = "Edit";
}

<div id="root"></div>

@section Scripts {
    <link href="~/js/shifts_edit_ui_app/node_modules/react-datetime/css/react-datetime.css" rel="stylesheet" />
    <script src="~/js/shifts_edit_ui_app/node_modules/toastr/build/toastr.min.js"></script>
    <script src="~/js/shifts_edit_ui_app/node_modules/react/umd/react.production.min.js"></script>
    <script src="~/js/shifts_edit_ui_app/node_modules/react-dom/umd/react-dom.production.min.js"></script>
    <script src="~/js/shifts_edit_ui_app/dist/bundle.shifts_edit_ui.js"></script>
    <style>
        .timePicker {
            display: inline-block
        }

        .datePickerDiv {
            display: inline-block
        }

        .loadBtn {
            margin-left: 0.5em
        }
    </style>
    <style>
        .part_add_btn, .grp_add_btn, .rem_all_part_btn {
            border: none;
            padding: 0 !important;
            /*border is optional*/
        }

        .part_del_btn, .part_up_btn, .part_down_btn, .part_edit_btn {
            border: none;
        }

        .shift_date_display {
            margin: 0;
            padding: 2px;
        }

        .shift_cell {
            min-height: 150px;
        }

        .general_shift_part {
            /*color: blue;*/
        }

        .absence_shift_part {
            text-decoration: line-through;
        }
    </style>
}

