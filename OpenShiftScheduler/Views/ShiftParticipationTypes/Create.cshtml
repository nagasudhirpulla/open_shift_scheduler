@model OpenShiftScheduler.Models.AppModels.ShiftParticipationType

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" media="screen" type="text/css" href="~/css/colorpicker.css" />

<h2>Create</h2>

<h4>ShiftParticipationType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
