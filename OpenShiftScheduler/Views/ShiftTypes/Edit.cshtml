@model OpenShiftScheduler.Models.AppModels.ShiftType

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" media="screen" type="text/css" href="~/css/colorpicker.css" />

<h2>Edit</h2>

<h4>ShiftType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShiftTypeId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartOffsetHrs" class="control-label"></label>
                <input asp-for="StartOffsetHrs" class="form-control" />
                <span asp-validation-for="StartOffsetHrs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartOffsetMins" class="control-label"></label>
                <input asp-for="StartOffsetMins" class="form-control" />
                <span asp-validation-for="StartOffsetMins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoasterSequence" class="control-label"></label>
                <input asp-for="RoasterSequence" class="form-control" />
                <span asp-validation-for="RoasterSequence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftSequence" class="control-label"></label>
                <input asp-for="ShiftSequence" class="form-control" />
                <span asp-validation-for="ShiftSequence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorString" class="control-label"></label>
                <input asp-for="ColorString" class="form-control colorpicker-input" />
                <span asp-validation-for="ColorString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript" src="~/js/colorpicker.js"></script>
    <script type="text/javascript" src="~/js/colorpicker_attach.js"></script>
}
